{
    "$schema": "https://json.schemastore.org/nest-cli",
    "compilerOptions": {
        "builder": {
            "outDir": "dist/api-gateway",
            "type": "webpack"
        },
        "deleteOutDir": true,
        "plugins": [
            {
                "name": "@nestjs/swagger",
                "options": {
                    "introspectComments": true
                }
            }
        ],
        "webpackConfigPath": "webpack.config.cjs"
    },
    "collection": "@nestjs/schematics",
    "generateOptions": {
        "spec": false
    },
    "sourceRoot": "src"
}
