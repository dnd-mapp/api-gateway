{
  "name": "@dnd-mapp/api-gateway",
  "description": "High-performance NestJS/Fastify REST API serving as the source of truth for 5th Edition TTRPG data, featuring SRD-compliant content, strict Prisma-based data integrity, and a decoupled architecture.",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "author": "NoNamer777",
  "scripts": {
    "gen:ssl-cert": "mkcert -key-file ssl-key.pem -cert-file ssl-cert.pem localhost.api.dndmapp.dev localhost 127.0.0.1",
    "prisma:migrate-deploy": "pnpm prisma migrate deploy",
    "prisma:migrate-reset": "pnpm prisma migrate reset",
    "prisma:migrate-dev": "pnpm prisma migrate dev",
    "prisma:seed": "pnpm prisma db seed",
    "prisma:generate": "pnpm prisma generate",
    "docker:build": "docker build -f .docker/Dockerfile -t dnd-mapp/api-gateway:latest .",
    "docker:bake": "docker buildx bake -f .docker/docker-bake.hcl app",
    "docker:compose:up": "docker compose -f .docker/compose.yaml up -d",
    "docker:compose:down": "docker compose -f .docker/compose.yaml down",
    "build": "pnpm nest build",
    "start": "pnpm nest start -w",
    "lint": "pnpm eslint .",
    "format:check": "pnpm prettier -l .",
    "format:write": "pnpm prettier -w ."
  },
  "packageManager": "pnpm@10.30.1",
  "dependencies": {
    "@nestjs/common": "~11.1",
    "@nestjs/config": "~4.0",
    "@nestjs/core": "~11.1",
    "@nestjs/platform-fastify": "~11.1",
    "@nestjs/terminus": "~11.0",
    "@prisma/adapter-mariadb": "~7.4",
    "@prisma/client": "~7.4",
    "fastify": "~5.7",
    "prisma": "~7.4",
    "reflect-metadata": "~0.2",
    "rxjs": "~7.8"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "~1.52",
    "@eslint/eslintrc": "~3.3",
    "@eslint/js": "~10.0",
    "@nestjs/cli": "~11.0",
    "@nestjs/schematics": "~11.0",
    "@types/node": "~24.10",
    "eslint": "~10.0",
    "eslint-config-prettier": "~10.1",
    "generate-package-json-webpack-plugin": "~2.6",
    "globals": "~17.3",
    "prettier": "~3.8",
    "prettier-plugin-organize-imports": "~4.3",
    "source-map-support": "~0.5",
    "ts-loader": "~9.5",
    "ts-node": "~10.9",
    "tsconfig-paths": "~4.2",
    "tsconfig-paths-webpack-plugin": "~4.2",
    "typescript": "~5.9",
    "typescript-eslint": "~8.56",
    "webpack": "~5.105",
    "webpack-node-externals": "~3.0"
  }
}
